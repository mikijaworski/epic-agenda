<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.epicagendaapp">

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/descarga"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/descarga"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.login.ReadContactsFirebaseActivity"></activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".FirebaseLogin" />
        <activity
            android:name=".ui.login.LoginFirebase"
            android:label="@string/title_activity_login_firebase" />
        <activity android:name=".ContactsTelActivity" />
        <activity android:name=".AddNewContact" />
        <activity android:name=".FirebaseMain"></activity>
        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>